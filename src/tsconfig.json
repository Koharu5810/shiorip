{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "allowJs": true, // 既存の app.js が残っていてもOKにする
        "noEmit": true, // 出力は Vite に任せる
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["resources/js/**/*"]
}
